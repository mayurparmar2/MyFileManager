<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:dither="true"
            android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="#cad4d9" />
        </shape>
    </item>
    <item
        android:left="2dp"
        android:top="1dp"
        android:right="2dp"
        android:bottom="3dp">
        <shape
            android:dither="true"
            android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="#1091c7" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</layer-list>
