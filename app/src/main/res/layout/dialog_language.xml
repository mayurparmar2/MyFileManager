<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/custom_head_tabstorage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/red"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Language"
        android:fontFamily="@font/nuntinobold" />

    <RelativeLayout
        android:id="@+id/r_vietnam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <ImageView
            android:id="@+id/img_check"
            android:padding="@dimen/_7sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/esclip" />

        <TextView
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="Viet Nam"
            android:layout_toRightOf="@+id/img_check"
            android:fontFamily="@font/nuntinobold"
            android:paddingStart="@dimen/_10sdp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r_usuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <ImageView
            android:id="@+id/img_check_usuk"
            android:padding="@dimen/_7sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/esclip" />

        <TextView
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="Us-Uk"
            android:layout_toRightOf="@+id/img_check_usuk"
            android:fontFamily="@font/nuntinobold"
            android:paddingStart="@dimen/_10sdp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r_korea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <ImageView
            android:id="@+id/img_check_korean"
            android:padding="@dimen/_7sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/esclip" />

        <TextView
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="Korea"
            android:layout_toRightOf="@+id/img_check_korean"
            android:fontFamily="@font/nuntinobold"
            android:paddingStart="@dimen/_10sdp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r_france"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <ImageView
            android:id="@+id/img_check_fr"
            android:padding="@dimen/_7sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/esclip" />

        <TextView
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="France"
            android:layout_toRightOf="@+id/img_check_fr"
            android:fontFamily="@font/nuntinobold"
            android:paddingStart="@dimen/_10sdp" />
    </RelativeLayout>

    <View
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginStart="-40dp"
        android:layout_marginEnd="-40dp" />

    <TextView
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/red"
        android:gravity="center"
        android:id="@+id/txt_dismiss"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="Dismiss"
        android:fontFamily="@font/nuntinobold" />
</LinearLayout>
