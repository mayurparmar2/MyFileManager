<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"

    >

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/activity_main_drawer"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/banner1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relaytive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_10sdp">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/main_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/nuntinobold"
                    android:gravity="center"
                    android:text="@string/fileexplozer"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp" />

                <ImageView
                    android:id="@+id/opend_drawer"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:foregroundGravity="right"
                    android:src="@drawable/icon_setting" />

                <ImageView
                    android:id="@+id/lauchericon"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:foregroundGravity="right"
                    android:src="@drawable/rocket_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/main_toolbar"
                    android:background="@drawable/custom_head_tabstorage"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/txt_storages"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nuntinobold"
                        android:gravity="center"
                        android:text="Storage"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/txt_file"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nuntinobold"
                        android:gravity="center"
                        android:text="Files"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/main_toolbar"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/custom_head_tabstorage"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <com.demo.filemanager.Activity.customview.tablayout.TabView
                        android:id="@+id/tabv_tab0"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:padding="@dimen/_5sdp"
                        app:tabv_colorMain="#e3001b"
                        app:tabv_colorSub="#ffffff"
                        app:tabv_duration="250"
                        app:tabv_padding="0dp"
                        app:tabv_paddingSide="@dimen/_5sdp"
                        app:tabv_textSize="@dimen/_12ssp"
                        app:tabv_title="Storage;Files" />
                </LinearLayout>
            </RelativeLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpager_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relaytive" />
        </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@drawable/custom_navigation_drawble"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:id="@+id/minear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#f5f7fa"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:src="@drawable/img_file_nv" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:fontFamily="@font/fontbold"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="File Manager "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_300sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_20sdp"
                    android:weightSum="5">

                    <RelativeLayout
                        android:id="@+id/r_recyclerbin"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp">

                        <ImageView
                            android:id="@+id/img_re"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/buttonrecycle" />

                        <TextView
                            android:id="@+id/txt_re"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_toRightOf="@+id/img_re"
                            android:fontFamily="@font/nunrinoregular"
                            android:gravity="clip_vertical"
                            android:text="@string/Recycle"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.3dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_toRightOf="@+id/img_re"
                            android:background="@color/backgrounditem" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/r_share"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp">

                        <ImageView
                            android:id="@+id/img_sh"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/icon_share" />

                        <TextView
                            android:id="@+id/txt_sh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_toRightOf="@+id/img_sh"
                            android:fontFamily="@font/nunrinoregular"
                            android:gravity="clip_vertical"
                            android:text="Share"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.3dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_toRightOf="@+id/img_sh"
                            android:background="@color/backgrounditem" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/r_rate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp">

                        <ImageView
                            android:id="@+id/img_ra"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/button_rates" />

                        <TextView
                            android:id="@+id/txt_ra"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_toRightOf="@+id/img_ra"
                            android:fontFamily="@font/nunrinoregular"
                            android:gravity="clip_vertical"
                            android:text="Rate Us"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.3dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_toRightOf="@+id/img_ra"
                            android:background="@color/backgrounditem" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/r_lan"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp">

                        <ImageView
                            android:id="@+id/img_lan"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/provi" />

                        <TextView
                            android:id="@+id/txt_lan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_toRightOf="@+id/img_lan"
                            android:fontFamily="@font/nunrinoregular"
                            android:gravity="clip_vertical"
                            android:text="@string/privacy_policy"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.3dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_toRightOf="@+id/img_lan"
                            android:background="@color/backgrounditem" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>


    <RelativeLayout
        android:id="@+id/banner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center" />
    </RelativeLayout>

</RelativeLayout>


