<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgrounditem"
    android:padding="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/img_back"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:src="@drawable/icon_back"
                    android:layout_weight="1" />

                <TextView
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="Clean"
                    android:layout_weight="8"
                    android:fontFamily="@font/nuntinobold" />
            </LinearLayout>

            <RelativeLayout
                android:background="@drawable/custom_head_tabstorage"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp">

                <TextView
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/black"
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cleaner Master"
                    android:fontFamily="@font/fontbold" />

                <TextView
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:id="@+id/t2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Boot up your phone and Clear phone cache."
                    android:layout_toLeftOf="@+id/img_rocket"
                    android:layout_below="@+id/t1"
                    android:fontFamily="@font/nuntinolight"
                    android:layout_marginEnd="@dimen/_10sdp" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/logo"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    app:lottie_autoPlay="true"
                    app:lottie_imageAssetsFolder="images"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/roketdialog"
                    app:lottie_url="REPLACE_JSON_URL" />

                <ImageView
                    android:id="@+id/img_rocket"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/_10sdp" />

                <TextView
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/txt_clear"
                    android:background="@drawable/back_gorund_textview"
                    android:paddingLeft="@dimen/_20sdp"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:text="@string/cleaner_master"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/nuntinolight" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/custom_head_tabstorage"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:weightSum="4">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:padding="4dp"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/icon_dowload" />

                    <TextView
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/downloads"
                        android:fontFamily="@font/fontbold"
                        android:layout_marginStart="@dimen/_10sdp" />

                    <TextView
                        android:textSize="@dimen/_9sdp"
                        android:textColor="@color/black"
                        android:gravity="right"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/up_size_dowload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Free up 0 mb &gt;"
                        android:fontFamily="@font/fontbook" />
                </LinearLayout>

                <TextView
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/black"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/count_file_freeeup"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Is loading..."
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:fontFamily="@font/fontbook"
                    android:layout_marginStart="@dimen/_50sdp"
                    android:layout_marginEnd="@dimen/_50sdp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_freeup"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/txt_clear_dowload"
                    android:background="@drawable/back_gorund_textview"
                    android:paddingLeft="@dimen/_20sdp"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/cleaner_master"
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/nuntinolight" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/custom_head_tabstorage"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:weightSum="4">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:padding="4dp"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/icon_apk" />

                    <TextView
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unused apps"
                        android:fontFamily="@font/fontbold"
                        android:layout_marginStart="@dimen/_10sdp" />

                    <TextView
                        android:textSize="@dimen/_9sdp"
                        android:textColor="@color/black"
                        android:gravity="right"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/freeup_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fontbook" />
                </LinearLayout>

                <TextView
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/count_unapp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Recently unused apps on your device"
                    android:layout_weight="1"
                    android:fontFamily="@font/nuntinolight" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_unapp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_weight="1" />

                <TextView
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/txt_clear_unapp"
                    android:background="@drawable/back_gorund_textview"
                    android:paddingLeft="@dimen/_20sdp"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="0dp"
                    android:text="@string/cleaner_master"
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/nuntinolight" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/custom_head_tabstorage"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:weightSum="4">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:padding="4dp"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/image_folder" />

                    <TextView
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/large_files"
                        android:fontFamily="@font/fontbold"
                        android:layout_marginStart="@dimen/_10sdp" />

                    <TextView
                        android:textSize="@dimen/_9sdp"
                        android:textColor="@color/black"
                        android:gravity="right"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/freeup_largefile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Free up 0 mb &gt;"
                        android:fontFamily="@font/fontbook" />
                </LinearLayout>

                <TextView
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/count_largefile"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@string/recent_unused_app"
                    android:layout_weight="1"
                    android:fontFamily="@font/fontbook" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_langefile"
                    android:padding="@dimen/_1sdp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_weight="1" />

                <TextView
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/txt_clear_largegile"
                    android:background="@drawable/back_gorund_textview"
                    android:paddingLeft="@dimen/_20sdp"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="0dp"
                    android:text="@string/cleaner_master"
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/nuntinolight" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
