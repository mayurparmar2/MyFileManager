<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/custom_head_tabstorage"
    android:paddingTop="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/img_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:text="Rename"
        android:fontFamily="@font/nutinoremibold" />

    <TextView
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:text="Please enter a new name"
        android:layout_below="@+id/img_info"
        android:fontFamily="@font/nunrinoregular" />

    <RelativeLayout
        android:id="@+id/r_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/txt">

        <EditText
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/black"
            android:id="@+id/edt_filename"
            android:background="@drawable/custom_edittext_dialogname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:hint="Enter the new name... "
            android:maxLines="1"
            android:isScrollContainer="true"
            android:verticalScrollbarPosition="defaultPosition"
            android:fontFamily="@font/nuntinolight"
            android:paddingStart="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/img_delete"
            android:visibility="gone"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/deleicon"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/_20sdp" />
    </RelativeLayout>

    <View
        android:id="@+id/v1"
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/r_text" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_below="@+id/v1">

        <TextView
            android:textSize="@dimen/_11sdp"
            android:textColor="#f44e42"
            android:gravity="center"
            android:id="@+id/txt_Cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:text="Cancel"
            android:layout_weight="1"
            android:fontFamily="@font/fontbold" />

        <View
            android:background="@color/divider"
            android:layout_width="0.5dp"
            android:layout_height="@dimen/_40sdp" />

        <TextView
            android:textSize="@dimen/_11sdp"
            android:textColor="#007aff"
            android:gravity="center"
            android:id="@+id/txt_OK"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:text="Set"
            android:layout_weight="1"
            android:fontFamily="@font/fontbold" />
    </LinearLayout>
</RelativeLayout>
