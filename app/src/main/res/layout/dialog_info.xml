<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/custom_head_tabstorage"
    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/img_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail"
        android:fontFamily="@font/nuntinobold" />

    <TextView
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:id="@+id/file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:maxLines="2"
        android:layout_below="@+id/img_info"
        android:fontFamily="@font/nunrinoregular"
        android:paddingStart="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp" />

    <TextView
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:layout_below="@+id/file_name"
        android:fontFamily="@font/nunrinoregular"
        android:paddingStart="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp" />

    <TextView
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:id="@+id/size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:layout_below="@+id/location"
        android:fontFamily="@font/nunrinoregular"
        android:paddingStart="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp" />

    <TextView
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:id="@+id/modifiled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_below="@+id/size"
        android:fontFamily="@font/nunrinoregular"
        android:paddingStart="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp" />

    <View
        android:id="@+id/v1"
        android:background="#3c3c43"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/modifiled" />

    <TextView
        android:textSize="@dimen/_15sdp"
        android:textColor="#f44e42"
        android:gravity="center"
        android:id="@+id/dissmis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Dismiss"
        android:layout_below="@+id/v1"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/fontbold" />
</RelativeLayout>
