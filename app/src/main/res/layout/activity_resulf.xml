<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"

    >

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_above="@id/banner1">

        <RelativeLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/textView_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:ellipsize="end"
                android:fontFamily="@font/fontbold"
                android:gravity="center"
                android:maxLines="2"
                android:paddingStart="@dimen/_50sdp"
                android:paddingEnd="@dimen/_50sdp"
                android:text="NULL"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/icon_back" />

            <ImageView
                android:id="@+id/img_delete_multil"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:src="@drawable/button_recycle"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_toLeftOf="@+id/img_delete_multil"
                android:src="@drawable/icon_share"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_menu"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/iconmore"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear_select"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/l1"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_count_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/nutinoremibold"
                android:text="Select all(0)"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/img_chose_all"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/esclip" />
        </LinearLayout>

        <EditText
            android:id="@+id/editText_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/l1"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/custom_edittext_search"
            android:fontFamily="@font/nuntinolight"
            android:hint="   Search file"
            android:isScrollContainer="true"
            android:maxLines="1"
            android:paddingStart="@dimen/_32sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="#6a6a6a"
            android:textColorHint="#6a6a6a"
            android:textSize="@dimen/_10ssp"
            android:verticalScrollbarPosition="defaultPosition" />

        <ImageView
            android:id="@+id/img_s"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/l1"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/icon_search2" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linear_select"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp" />

        <LinearLayout
            android:id="@+id/check_layout_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_checklist"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/icon_list_empty" />

            <TextView
                android:id="@+id/txt_checklist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No documents found! "
                android:textColor="#9b9b9b" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/banner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center" />
    </RelativeLayout>

</RelativeLayout>

