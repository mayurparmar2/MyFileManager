<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/l1"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="NULL"
            android:maxLines="2"
            android:fontFamily="@font/fontbold"
            android:paddingStart="@dimen/_50sdp"
            android:paddingEnd="@dimen/_50sdp" />

        <ImageView
            android:id="@+id/img_back"
            android:padding="@dimen/_5sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/icon_back" />

        <ImageView
            android:id="@+id/img_delete_multil"
            android:visibility="gone"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/button_recycle"
            android:layout_alignParentRight="true" />

        <ImageView
            android:id="@+id/img_share"
            android:visibility="gone"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/icon_share"
            android:layout_toLeftOf="@+id/img_delete_multil" />

        <ImageView
            android:id="@+id/img_menu"
            android:padding="@dimen/_10sdp"
            android:visibility="gone"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/iconmore"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linear_select"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@+id/l1"
        android:layout_alignParentRight="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <TextView
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:id="@+id/txt_count_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select all(0)"
            android:fontFamily="@font/nutinoremibold"
            android:layout_marginEnd="@dimen/_10sdp" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/img_chose_all"
            android:padding="@dimen/_2sdp"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/esclip" />
    </LinearLayout>

    <EditText
        android:textSize="@dimen/_10ssp"
        android:textColor="#6a6a6a"
        android:textColorHint="#6a6a6a"
        android:id="@+id/edt_search"
        android:background="@drawable/custom_edittext_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:hint="   Search file"
        android:maxLines="1"
        android:layout_below="@+id/l1"
        android:isScrollContainer="true"
        android:verticalScrollbarPosition="defaultPosition"
        android:fontFamily="@font/nuntinolight"
        android:paddingStart="@dimen/_32sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp" />

    <ImageView
        android:id="@+id/img_s"
        android:padding="@dimen/_5sdp"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:src="@drawable/icon_search2"
        android:layout_below="@+id/l1"
        android:layout_marginStart="@dimen/_15sdp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_below="@+id/linear_select"
        android:layout_marginStart="@dimen/_10sdp" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/check_layout_empty"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/img_checklist"
            android:padding="@dimen/_10sdp"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/icon_list_empty" />

        <TextView
            android:textColor="#9b9b9b"
            android:id="@+id/txt_checklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No documents found! " />
    </LinearLayout>
</RelativeLayout>
