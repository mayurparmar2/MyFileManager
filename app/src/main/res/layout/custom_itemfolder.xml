<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/custom_head_tabstorage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_10sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:padding="@dimen/_4sdp"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:elevation="0dp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="0dp">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/icon_file"
            android:padding="@dimen/_5sdp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/image_folder"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/img_check"
        android:layout_toRightOf="@+id/cardview"
        android:layout_centerVertical="true"
        android:layout_marginStart="8sp">

        <TextView
            android:textSize="@dimen/_12ssp"
            android:textColor="#000"
            android:ellipsize="end"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:fontFamily="@font/nuntinobold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/_9ssp"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:fontFamily="@font/nuntinolight" />

            <TextView
                android:textSize="@dimen/_9ssp"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:fontFamily="@font/nuntinolight"
                android:layout_marginStart="12sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_check"
        android:padding="@dimen/_8sdp"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/checkicon"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
</RelativeLayout>
