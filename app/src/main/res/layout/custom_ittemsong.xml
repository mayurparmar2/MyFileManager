<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rela_songitem"
    android:background="@drawable/custom_head_tabstorage"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_10sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="@dimen/_9sdp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/musicstyle" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:textSize="@dimen/_11ssp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:gravity="start"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_9sdp"
        android:maxLines="1"
        android:layout_toLeftOf="@+id/txt_durian"
        android:layout_toRightOf="@+id/card"
        android:fontFamily="@font/nunrinoregular"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="@dimen/_10sdp" />

    <TextView
        android:textSize="@dimen/_7ssp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:id="@+id/band"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/txt_durian"
        android:layout_toRightOf="@+id/card"
        android:layout_below="@+id/title"
        android:fontFamily="@font/nuntinolight"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="@dimen/_10sdp" />

    <TextView
        android:textSize="@dimen/_9ssp"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/txt_durian"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="02:02"
        android:layout_toLeftOf="@+id/menu_button"
        android:layout_centerVertical="true"
        android:fontFamily="@font/fontbook" />

    <ImageView
        android:id="@+id/menu_button"
        android:paddingTop="@dimen/_17sdp"
        android:paddingBottom="@dimen/_16sdp"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:src="@drawable/iconmore"
        android:scaleType="centerInside"
        android:tint="#6a6a6a"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_5sdp" />

    <ImageView
        android:id="@+id/img_check"
        android:background="#ffff"
        android:padding="@dimen/_4sdp"
        android:visibility="gone"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:src="@drawable/esclip"
        android:scaleType="centerInside"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_5sdp" />
</RelativeLayout>
