<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="Change The Password"
            android:fontFamily="@font/fontbold"
            android:paddingStart="@dimen/_50sdp"
            android:paddingEnd="@dimen/_50sdp" />

        <ImageView
            android:id="@+id/img_back"
            android:padding="@dimen/_5sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/icon_back" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/l_changepass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1">

        <TextView
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Enter old password."
            android:fontFamily="@font/nutinoremibold"
            android:paddingStart="@dimen/_5sdp" />

        <com.google.android.material.textfield.TextInputLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            app:passwordToggleEnabled="true">

            <EditText
                android:gravity="center_vertical"
                android:id="@+id/edt_oldpass"
                android:background="@drawable/custom_edittext_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_2sdp"
                android:maxLength="8"
                android:inputType="numberPassword"
                android:paddingStart="@dimen/_5sdp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:textSize="@dimen/_9ssp"
            android:textColor="@color/red"
            android:id="@+id/txt_idcheckoldpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nuntinolight"
            android:paddingStart="@dimen/_5sdp" />

        <TextView
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Enter new password."
            android:fontFamily="@font/nutinoremibold"
            android:paddingStart="@dimen/_5sdp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:inputType="numberPassword"
            app:passwordToggleEnabled="true">

            <EditText
                android:gravity="center_vertical"
                android:id="@+id/edt_newpass"
                android:background="@drawable/custom_edittext_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_2sdp"
                android:maxLength="8"
                android:inputType="numberPassword"
                android:paddingStart="@dimen/_5sdp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm new password."
            android:fontFamily="@font/nutinoremibold"
            android:paddingStart="@dimen/_5sdp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            app:passwordToggleEnabled="true">

            <EditText
                android:gravity="center_vertical"
                android:id="@+id/edt_newpass2"
                android:background="@drawable/custom_edittext_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_2sdp"
                android:maxLength="8"
                android:inputType="numberPassword"
                android:paddingStart="@dimen/_5sdp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:textSize="@dimen/_9ssp"
            android:textColor="@color/red"
            android:id="@+id/txt_idchecknewpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nuntinolight"
            android:paddingStart="@dimen/_5sdp" />

        <TextView
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/txt_setpass"
            android:background="@drawable/killbtn_hv"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_40sdp"
            android:text="Set pass"
            android:fontFamily="@font/nunrinoregular" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/l_passchanged"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/img_passchanged" />

        <TextView
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password changed!"
            android:fontFamily="@font/nutinoremibold" />

        <TextView
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your password has been changed successfully !"
            android:fontFamily="@font/nuntinolight" />
    </LinearLayout>
</RelativeLayout>
