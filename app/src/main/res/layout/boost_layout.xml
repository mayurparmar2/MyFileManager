<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/custom_head_tabstorage"
        android:padding="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <com.filemanager.fileexplorer.myfile.cleanmaster.free.Rambooter.progressWheel.ProgressWheel
            android:layout_gravity="left"
            android:id="@+id/pw_spinner"
            android:visibility="gone"
            android:layout_width="120dp"
            android:layout_height="120dp"
            ads:barColor="#f81111"
            ads:barLength="60dp"
            ads:barWidth="10dp"
            ads:rimColor="#dd2c00"
            ads:rimWidth="5dp"
            ads:spinSpeed="3dp"
            ads:text="0%"
            ads:textColor="#fb0000"
            ads:textSize="26sp" />

        <TableLayout
            android:gravity="center"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="5">

            <TableRow
                android:paddingBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/red"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/used_mem"
                    android:fontFamily="@font/nunrinoregular" />

                <TextView
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#061039"
                    android:gravity="left"
                    android:id="@+id/txtUsedMemory"
                    android:paddingLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="128 MB"
                    android:fontFamily="@font/nuntinoblack" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#061039"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/free_mem"
                    android:fontFamily="@font/nunrinoregular" />

                <TextView
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#0c184c"
                    android:gravity="left"
                    android:id="@+id/txtFreeMemory"
                    android:paddingLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="128 MB"
                    android:fontFamily="@font/nuntinoblack" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#ffd600"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/total_mem"
                    android:fontFamily="@font/nunrinoregular" />

                <TextView
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#061039"
                    android:gravity="left"
                    android:id="@+id/txtTotalMemory"
                    android:paddingLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="484 MB"
                    android:fontFamily="@font/nuntinoblack" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    ads:cardBackgroundColor="#ffb0b0"
                    ads:cardCornerRadius="@dimen/_2sdp"
                    ads:cardElevation="0dp" />

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp">

                    <TextView
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Free Memory"
                        android:fontFamily="@font/nunrinoregular" />

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/ram_used"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="23GB"
                        android:fontFamily="@font/nuntinobold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    ads:cardBackgroundColor="#e3001b"
                    ads:cardCornerRadius="@dimen/_2sdp"
                    ads:cardElevation="0dp" />

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp">

                    <TextView
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Used"
                        android:fontFamily="@font/nunrinoregular" />

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/ram_av"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="23GB"
                        android:fontFamily="@font/nuntinobold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    ads:cardBackgroundColor="#e86868"
                    ads:cardCornerRadius="@dimen/_2sdp"
                    ads:cardElevation="0dp" />

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp">

                    <TextView
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total memory"
                        android:fontFamily="@font/nunrinoregular" />

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/ram_total"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="23GB"
                        android:fontFamily="@font/nuntinobold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <com.filemanager.fileexplorer.myfile.cleanmaster.free.Activity.customview.CircularProgressIndicator
            android:layout_gravity="center_vertical"
            android:id="@+id/circular_progress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_alignParentRight="true"
            ads:enableProgressAnimation="true"
            ads:progressBackgroundColor="@color/pink"
            ads:progressBackgroundStrokeWidth="17dp"
            ads:progressCap="round"
            ads:progressColor="#e3001b"
            ads:progressStrokeWidth="17dp"
            ads:startAngle="270"
            ads:textColor="#e3001b" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/custom_head_tabstorage"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="2">

        <TextView
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/black"
            android:gravity="left"
            android:id="@+id/txtLastBoost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nunrinoregular" />

        <TextView
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/black"
            android:gravity="left"
            android:id="@+id/txtLastMemoryCleaned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nunrinoregular" />

        <TextView
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/black"
            android:gravity="left"
            android:id="@+id/txtLastCacheCleaned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/nunrinoregular" />

        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/img_gif"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/_50sdp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        android:layout_weight="1">

        <Button
            android:textSize="@dimen/_14ssp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:id="@+id/btnBoost"
            android:background="@drawable/killbtn_sel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/btn_boost"
            android:fontFamily="@font/nuntinobold" />
    </LinearLayout>
</LinearLayout>
