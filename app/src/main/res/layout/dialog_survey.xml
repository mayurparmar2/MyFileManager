<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="Forgot password"
            android:fontFamily="@font/nuntinobold" />

        <ImageView
            android:id="@+id/img_back"
            android:padding="@dimen/_5sdp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="-10dp"
            android:src="@drawable/icon_back" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/custom_head_tabstorage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">

        <TextView
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="1.Choose a color you like"
            android:fontFamily="@font/nunrinoregular"
            android:layout_marginStart="@dimen/_10sdp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_black"
                android:padding="@dimen/_3sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/red"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp" />

                <ImageView
                    android:id="@+id/checkblack"
                    android:visibility="gone"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:src="@drawable/checkicon" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_red"
                android:padding="@dimen/_3sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_10sdp">

                <ImageView
                    android:background="@color/red"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp" />

                <ImageView
                    android:id="@+id/checkred"
                    android:visibility="gone"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:src="@drawable/checkicon" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_origin"
                android:padding="@dimen/_3sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:background="#ffc107"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp" />

                <ImageView
                    android:id="@+id/checkorigin"
                    android:visibility="gone"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:src="@drawable/checkicon" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_pink"
                android:padding="@dimen/_3sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:background="#e91e63"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp" />

                <ImageView
                    android:id="@+id/checkpink"
                    android:visibility="gone"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:src="@drawable/checkicon" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:weightSum="4">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_blue"
                android:padding="@dimen/_3sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:background="#2196f3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp" />

                <ImageView
                    android:id="@+id/checkblue"
                    android:visibility="gone"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:src="@drawable/checkicon" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_green"
                android:padding="@dimen/_3sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:background="#8bc34a"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp" />

                <ImageView
                    android:id="@+id/checkgreen"
                    android:visibility="gone"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:src="@drawable/checkicon" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_green2"
                android:padding="@dimen/_3sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:background="#009688"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp" />

                <ImageView
                    android:id="@+id/checkgreen2"
                    android:visibility="gone"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:src="@drawable/checkicon" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_yellow"
                android:padding="@dimen/_3sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:background="#bd905b"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp" />

                <ImageView
                    android:id="@+id/checkyellow"
                    android:visibility="gone"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:src="@drawable/checkicon" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/custom_head_tabstorage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp">

        <TextView
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="2.Choose a special picture"
            android:fontFamily="@font/nunrinoregular"
            android:layout_marginStart="@dimen/_10sdp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_fl"
                android:padding="@dimen/_3sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                app:cardBackgroundColor="#eaeaea"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/fo_flower"
                    android:tint="#7a7a7a" />

                <ImageView
                    android:id="@+id/checkimg1"
                    android:visibility="gone"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:src="@drawable/checkicon" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_house"
                android:padding="@dimen/_3sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                app:cardBackgroundColor="#eaeaea"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/for_house"
                    android:tint="#7a7a7a" />

                <ImageView
                    android:id="@+id/checkimg2"
                    android:visibility="gone"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:src="@drawable/checkicon" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_moon"
                android:padding="@dimen/_3sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                app:cardBackgroundColor="#eaeaea"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/s_moon" />

                <ImageView
                    android:id="@+id/checkimg3"
                    android:visibility="gone"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:src="@drawable/checkicon" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:weightSum="3">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_key"
                android:padding="@dimen/_3sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                app:cardBackgroundColor="#eaeaea"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/fo_key"
                    android:tint="#7a7a7a" />

                <ImageView
                    android:id="@+id/checkimg4"
                    android:visibility="gone"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:src="@drawable/checkicon" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_rank"
                android:padding="@dimen/_3sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                app:cardBackgroundColor="#eaeaea"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/fo_rank"
                    android:tint="#7a7a7a" />

                <ImageView
                    android:id="@+id/checkimg5"
                    android:visibility="gone"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:src="@drawable/checkicon" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_coffe"
                android:padding="@dimen/_3sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                app:cardBackgroundColor="#eaeaea"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/s_cup" />

                <ImageView
                    android:id="@+id/checkimg6"
                    android:visibility="gone"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:src="@drawable/checkicon" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/l_check"
        android:background="@drawable/custom_head_tabstorage"
        android:padding="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:weightSum="10">

        <TextView
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Password"
            android:fontFamily="@font/nunrinoregular" />

        <ImageView
            android:id="@+id/img_check"
            android:padding="@dimen/_5sdp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/checkicon"
            android:layout_weight="2" />

        <TextView
            android:textSize="@dimen/_14ssp"
            android:textColor="#0081a8"
            android:gravity="center_vertical"
            android:id="@+id/txt_resulf"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:text="•••••••"
            android:layout_weight="8"
            android:fontFamily="@font/nuntinobold" />
    </LinearLayout>

    <TextView
        android:textColor="@color/red"
        android:id="@+id/txt_titile_check"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="You have tried too many time"
        android:fontFamily="@font/nunrinoregular"
        android:paddingStart="@dimen/_5sdp" />

    <TextView
        android:textColor="@color/red"
        android:id="@+id/txt_timecheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nutinoremibold"
        android:paddingStart="@dimen/_5sdp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:id="@+id/txt_Cancel"
            android:background="@drawable/killbtn_hv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text="@string/ok"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/nuntinobold" />
    </RelativeLayout>
</LinearLayout>
