<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/custom_head_tabstorage"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:text="Sort By"
        android:fontFamily="@font/nuntinobold" />

    <RelativeLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_15sdp">

        <ImageView
            android:id="@+id/img_check"
            android:padding="@dimen/_7sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/icon_check_multil"
            android:layout_alignParentLeft="true" />

        <TextView
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="Name"
            android:layout_toRightOf="@+id/img_check"
            android:fontFamily="@font/nunrinoregular"
            android:paddingStart="@dimen/_10sdp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_15sdp">

        <ImageView
            android:id="@+id/img_check_type"
            android:padding="@dimen/_7sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/icon_check_multil"
            android:layout_alignParentLeft="true" />

        <TextView
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="Type"
            android:layout_toRightOf="@+id/img_check_type"
            android:fontFamily="@font/nunrinoregular"
            android:paddingStart="@dimen/_10sdp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_15sdp">

        <ImageView
            android:id="@+id/img_check_size"
            android:padding="@dimen/_7sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/icon_check_multil"
            android:layout_alignParentLeft="true" />

        <TextView
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="Size"
            android:layout_toRightOf="@+id/img_check_size"
            android:fontFamily="@font/nunrinoregular"
            android:paddingStart="@dimen/_10sdp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_15sdp">

        <ImageView
            android:id="@+id/img_check_date"
            android:padding="@dimen/_7sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/icon_check_multil"
            android:layout_alignParentLeft="true" />

        <TextView
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="Date Modifiled"
            android:layout_toRightOf="@+id/img_check_date"
            android:fontFamily="@font/nunrinoregular"
            android:paddingStart="@dimen/_10sdp" />
    </RelativeLayout>

    <View
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp" />

    <TextView
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/red"
        android:gravity="center"
        android:id="@+id/dismiss"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:text="Cancel"
        android:fontFamily="@font/nuntinobold" />
</LinearLayout>
