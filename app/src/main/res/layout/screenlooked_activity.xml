<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/background_layout"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Hide"
        android:fontFamily="@font/nutinoremibold"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/img_back"
        android:padding="@dimen/_5sdp"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:src="@drawable/icon_back"
        android:layout_marginStart="@dimen/_10sdp" />

    <ImageView
        android:id="@+id/img_changepass"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:src="@drawable/icon_change_pass"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/_10sdp" />

    <ImageView
        android:id="@+id/logo"
        android:visibility="visible"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/pana"
        android:layout_below="@+id/img_back"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/input_password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true">

        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/haha_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Your Password"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/nutinoremibold" />

        <TextView
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="@string/up_to_8_characters"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/nuntinolight" />

        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp">

            <TextView
                android:textSize="20sp"
                android:textColor="#0081a8"
                android:gravity="center_vertical"
                android:id="@+id/dotText"
                android:background="@drawable/custom_edittext_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:inputType="textPassword"
                android:paddingStart="@dimen/_10sdp" />

            <ImageView
                android:id="@+id/imghide_pass"
                android:padding="@dimen/_8sdp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/hide"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_5sdp" />
        </RelativeLayout>

        <TextView
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/red"
            android:layout_gravity="start"
            android:id="@+id/txt_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/nuntinolight"
            android:paddingStart="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_20sdp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/number_pad_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:weightSum="4"
        android:layout_above="@+id/lbtnTick"
        android:layout_below="@+id/input_password_layout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3"
            android:layout_weight="1">

            <Button
                android:textSize="30sp"
                android:textColor="@color/black"
                android:id="@+id/lbtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_weight="1"
                android:fontFamily="@font/nutinoremibold"
                android:textAlignment="center"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />

            <Button
                android:textSize="30sp"
                android:textColor="@color/black"
                android:id="@+id/lbtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_weight="1"
                android:fontFamily="@font/nutinoremibold"
                android:textAlignment="center"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />

            <Button
                android:textSize="30sp"
                android:textColor="@color/black"
                android:id="@+id/lbtn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_weight="1"
                android:fontFamily="@font/nutinoremibold"
                android:textAlignment="center"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3"
            android:layout_weight="1">

            <Button
                android:textSize="30sp"
                android:textColor="@color/black"
                android:id="@+id/lbtn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_weight="1"
                android:fontFamily="@font/nutinoremibold"
                android:textAlignment="center"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />

            <Button
                android:textSize="30sp"
                android:textColor="@color/black"
                android:id="@+id/lbtn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_weight="1"
                android:fontFamily="@font/nutinoremibold"
                android:textAlignment="center"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />

            <Button
                android:textSize="30sp"
                android:textColor="@color/black"
                android:id="@+id/lbtn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_weight="1"
                android:fontFamily="@font/nutinoremibold"
                android:textAlignment="center"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3"
            android:layout_weight="1">

            <Button
                android:textSize="30sp"
                android:textColor="@color/black"
                android:id="@+id/lbtn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:layout_weight="1"
                android:fontFamily="@font/nutinoremibold"
                android:textAlignment="center"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />

            <Button
                android:textSize="30sp"
                android:textColor="@color/black"
                android:id="@+id/lbtn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:layout_weight="1"
                android:fontFamily="@font/nutinoremibold"
                android:textAlignment="center"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />

            <Button
                android:textSize="30sp"
                android:textColor="@color/black"
                android:id="@+id/lbtn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:layout_weight="1"
                android:fontFamily="@font/nutinoremibold"
                android:textAlignment="center"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3"
            android:layout_weight="1">

            <Button
                android:textSize="30sp"
                android:textColor="@color/black"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nutinoremibold"
                android:textAlignment="center"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />

            <Button
                android:textSize="30sp"
                android:textColor="@color/black"
                android:id="@+id/lbtn0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_weight="1"
                android:fontFamily="@font/nutinoremibold"
                android:textAlignment="center"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Base.Widget.AppCompat.Button.Borderless">

                <ImageView
                    android:id="@+id/lbtnDelete"
                    android:padding="@dimen/_3sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/deleicon"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/lbtnTick"
        android:background="@drawable/custom_edittext_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:text="Enter"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/nunrinoregular"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:backgroundTint="#e3001b" />

    <TextView
        android:textColor="#0081a8"
        android:gravity="center"
        android:id="@+id/forgot_pass_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_7sdp"
        android:text="@string/forgot_password"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/nuntinolight" />
</RelativeLayout>
