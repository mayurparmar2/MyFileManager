<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/custom_head_tabstorage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/icon_grid"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:src="@drawable/image_folder"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="@dimen/_8sdp"
        android:textColor="#000"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/text_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="Folder"
        android:maxLines="1"
        android:layout_below="@+id/icon_grid"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/nunrinoregular" />

    <ImageView
        android:id="@+id/img_check"
        android:padding="@dimen/_8sdp"
        android:visibility="gone"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/icon_check_multil"
        android:tint="@color/red"
        android:layout_alignParentRight="true" />
</RelativeLayout>
